        var nome = readline.question('nome: ');

        if (mediaaluno > media)
            mídia = mídiaaluno;
            nomemaiormedia = nome
        //(mídia < 7) ? console.log('Reprovado'): console.log('Aprovado');
        cont = cont + 1;
